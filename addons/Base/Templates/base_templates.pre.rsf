(var rubble:ore_data <map>)
(rubble:template "REGISTER_ORE" id metal amount {
	(if (exists [rubble:ore_data] [id]){
	}{
		(set [rubble:ore_data] [id] <map>)
	})
	
	(if (exists [rubble:ore_data [id]] [metal]){
