	(set raws (nop))
	
	# Tree Colors
	(regex:replace "\\[TREE_COLOR:([0-9]+:[0-9]+:[0-9]+)\\]" [raws] (str:add "[TREE_COLOR:{#COLOR;TREE_" [id] ";$1}]"))
	(set raws (nop))
