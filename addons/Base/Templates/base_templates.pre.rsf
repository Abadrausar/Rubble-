
# Templates used in the base

# Note that to keep the output properly formatted templates often have ugly indentation

# Load some helpful commands.
# These are the same "shell predefs" that are loaded by the Raptor shell by default.

# increment variable
(command ++ __name__ {
	(set [__name__] (int:add [[__name__]] 1))
})

# decrement variable
(command -- __name__ {
	(set [__name__] (int:sub [[__name__]] 1))
})

# for loop
(command for __init__ __test__ __incriment__ __code__ {
	(eval [__init__])
	(loop {
		(if (evalinnew [__test__]) {}{(breakloop false)})
		(evalinnew [__code__])
		(evalinnew [__incriment__])
		(break true)
	})
})

# while loop
(command while __test__ __code__ {
	(loop {
		(if (evalinnew [__test__]) {}{(breakloop false)})
		(evalinnew [__code__])
		(break true)
	})
})

# include a file
# requires the file io commands to be loaded
(command include __path__ {
	(evalinparent (fileio:read [__path__]))
})

# The comment templates, very simple, just do nothing.
(rubble:template "COMMENT" {(ret "")})
(rubble:template "C" {(ret "")})

(rubble:template "VOID" ... {
	(foreach [params] {
		# Note that params here is NOT the same array as the one passed to foreach
		(rubble:stageparse [params 1])
		(break true)
	})
	(ret "")
})

# ABORT, cause Rubble to exit with an error, not used in the base.
(rubble:template "!ABORT" msg {(rubble:abort [msg])})
(rubble:template "ABORT" msg {(rubble:abort [msg])})
(rubble:template "#ABORT" msg {(rubble:abort [msg])})

# The next two templates are for stripping leading/trailing whitespace from a string.
# A formatting tool mostly, helps keep whitespace under control in generated files.
# May also be used to help control variable expansion.
(rubble:template "ECHO" ... {
	(var tmp)
	(foreach [params] {
		(set tmp (str:add [tmp] [params 1]))
	})
	(rubble:stageparse [tmp])
})
(rubble:template "E" ... {
	(var tmp)
	(foreach [params] {
		(set tmp (str:add [tmp] [params 1]))
	})
	(rubble:stageparse [tmp])
})

# Shared Object, the single most important template in all of Rubble
(var rubble:shared_object_data <map>)
(rubble:template "SHARED_OBJECT" id raws {
	(if (exists [rubble:shared_object_data] [id]){
		(rubble:stageparse [raws])
		(ret "")
	}{
		(set [rubble:shared_object_data] [id] (rubble:stageparse [raws]))
		(ret (str:add "{#_INSERT_SHARED_OBJECT;" [id] "}"))
	})
})
(rubble:template "SHARED_OBJECT_EXISTS" id then "else=" {
	(if (exists [rubble:shared_object_data] [id]) {
		(rubble:stageparse [then])
	}{
		(rubble:stageparse [else])
	})
})
(rubble:template "SHARED_OBJECT_ADD" id raws {
	(if (exists [rubble:shared_object_data] [id]){
		(set [rubble:shared_object_data] [id] 
			(str:add [rubble:shared_object_data [id]] "\n\t" (rubble:stageparse [raws]))
		)
	}{
		(rubble:stageparse [raws])
	})
	(ret "")
})
(rubble:template "#_INSERT_SHARED_OBJECT" id {
	(if (exists [rubble:shared_object_data] [id]){
		(rubble:stageparse [rubble:shared_object_data [id]])
	}{
		(ret "")
	})
})

(rubble:template "IF" a b then "else=" {
	(if (str:cmp [a] [b]){
		(rubble:stageparse [then])
	}{
		(rubble:stageparse [else])
	})
})

